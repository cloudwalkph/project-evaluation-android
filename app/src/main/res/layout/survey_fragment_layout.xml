<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/question_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="1. Updated all concerned departments on negotiation's status of the venues and/or other channels:"
            android:textSize="20dp"
            android:textAppearance="@style/montserratBold"
            />

        <LinearLayout
            android:id="@+id/linear_layout_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:gravity="left"
            android:layout_marginLeft="80dp">


            <RadioButton
                android:text="Details explained through Gantt Chart"
                android:textAppearance="@style/montserratBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer1"
                android:textSize="20dp"
                android:padding="10dp"/>

            <RadioButton
                android:text="Status shared via Viber"
                android:textAppearance="@style/montserratBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer2"
                android:textSize="20dp"
                android:padding="10dp"/>

            <RadioButton
                android:text="Status shared via Email"
                android:textAppearance="@style/montserratBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer3"
                android:textSize="20dp"
                android:padding="10dp"/>

            <RadioButton
                android:text="Status shared via Calls/SMS"
                android:textAppearance="@style/montserratBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer4"
                android:textSize="20dp"
                android:padding="10dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>