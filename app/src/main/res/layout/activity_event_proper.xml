<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/ll_pre_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="95dp"
        android:textAlignment="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pre_event" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="@style/montserratBold"
            android:text="Pre Event"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="60dp"
            android:textSize="40sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_event_proper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="95dp"
        android:textAlignment="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/event_proper" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="@style/montserratBold"
            android:text="Event Proper"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="60dp"
            android:textSize="40sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_post_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="95dp"
        android:textAlignment="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/post_event" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="@style/montserratBold"
            android:textColor="@color/black"
            android:text="Post Event"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:textSize="40sp"/>

    </LinearLayout>


</LinearLayout>
