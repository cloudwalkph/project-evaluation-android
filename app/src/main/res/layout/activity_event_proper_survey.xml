<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/eventProperToolBar"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="?attr/actionBarSize"
            layout_scrollFlags="scroll|enterAlways" />

        <LinearLayout
            android:id="@+id/ll_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:orientation="vertical"
            android:paddingRight="50dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/header_events_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dove School Event"
                android:textSize="30dp"
                android:textAppearance="@style/montserratBold"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/header_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operations"
                android:textSize="30dp"
                android:textAppearance="@style/montserrat"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/event_proper_survey_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow_bottom"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:id="@+id/ll_left">

            <Button
                android:id="@+id/prevBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textAppearance="@style/montserratBold"
                android:drawableLeft="@mipmap/ic_chevron_left_black_36dp"
                android:text="BACK"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/ll_center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:progress="30"
                android:max="100"
                android:indeterminate="false"
                style="?android:attr/progressBarStyleHorizontal"
                android:minWidth="300dp"
                android:minHeight="50dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/ll_right">

            <Button
                android:id="@+id/nxtBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textAppearance="@style/montserratBold"
                android:drawableRight="@mipmap/ic_chevron_right_black_36dp"
                android:text="NEXT"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
